#Funcionarios

    String cargo;
    String cabello;
    String tipoCuerpo;
    String dieta;
    String sueño;
    String ambienteLaboral;
    String actividades;
    
    public static void main(String[] args) {
        Funcionario funcionario1 = new Funcionario();
        Funcionario funcionario2 = new Funcionario();
        Funcionario funcionario3 = new Funcionario();
        Funcionario funcionario4 = new Funcionario();
        
        funcionario1.cargo = "Docente";
        funcionario1.cabello = "Rubio";
        funcionario1.tipoCuerpo = "Mesomorfo";
        funcionario1.dieta = "Tres comidad al dia (mañana, tarde, noche)";
        funcionario1.sueño = "6 u 8 horas al dia";
        funcionario1.ambienteLaboral = "Un ambiente laboral teniendo una interaccion mas real y directa con los estudiantes y con diferentes entes de la universidad";
        funcionario1.actividades = "Enseñar, calificar, retroalimentar, brindar nuevos conocimientos";
        
        System.out.println("Funcionario 1");
        System.out.println("");
        System.out.println("Aributos");
        System.out.println("El cargo es: " + funcionario1.cargo);
        System.out.println("Su color de cabello es: " + funcionario1.cabello);
        System.out.println("Su tipo de cuerpo es: " + funcionario1.tipoCuerpo);
        System.out.println("");
        System.out.println("Metodos");
        System.out.println("Su alimentacion esta basada en: " + funcionario1.dieta);
        System.out.println("Su tiempo de descanso esta dado en: " + funcionario1.sueño);
        System.out.println("");
        System.out.println("Eventos");
        System.out.println("Su ambiente laboras se puede situar como: " + funcionario1.ambienteLaboral);
        System.out.println("Sus actividades según si cargo son: " + funcionario1.actividades);
        
        
        funcionario2.cargo = "Rector";
        funcionario2.cabello = "Blanco";
        funcionario2.tipoCuerpo = "Mesomorfo";
        funcionario2.dieta = "Tres comidad al dia (mañana, tarde, noche)";
        funcionario2.sueño = "6 u 8 horas al dia";
        funcionario2.ambienteLaboral = "Un ambiente laboral no con tanta interaccion con los estudiantes sino mas con los funcionarios presentes en la universidad";
        funcionario2.actividades = "Dar un direccionamiento a todas las unidades, ser la mayor autoridad academica, dirigir y coordinar la gestion universitaria";
        
        System.out.println("Funcionario 2");
        System.out.println("");
        System.out.println("Aributos");
        System.out.println("El cargo es: " + funcionario2.cargo);
        System.out.println("Su color de cabello es: " + funcionario2.cabello);
        System.out.println("Su tipo de cuerpo es: " + funcionario2.tipoCuerpo);
        System.out.println("");
        System.out.println("Metodos");
        System.out.println("Su alimentacion esta basada en: " + funcionario2.dieta);
        System.out.println("Su tiempo de descanso esta dado en: " + funcionario2.sueño);
        System.out.println("");
        System.out.println("Eventos");
        System.out.println("Su ambiente laboras se puede situar como: " + funcionario2.ambienteLaboral);
        System.out.println("Sus actividades según si cargo son: " + funcionario2.actividades);
        
        funcionario3.cargo = "Decano de facultad de artes";
        funcionario3.cabello = "Alopecia";
        funcionario3.tipoCuerpo = "Mesomorfo";
        funcionario3.dieta = "Tres comidad al dia (mañana, tarde, noche)";
        funcionario3.sueño = "6 u 8 horas al dia";
        funcionario3.ambienteLaboral = "Un ambiente laboral teniendo un equilibrio entre interaccion de estudiantes y diferentes entes de la univerversitaria";
        funcionario3.actividades = "Liderar los proyectos, generar sinergia con las entidades externas, brindar el ambientge adecuado";
        
        System.out.println("Funcionario 3");
        System.out.println("");
        System.out.println("Aributos");
        System.out.println("El cargo es: " + funcionario3.cargo);
        System.out.println("Su color de cabello es: " + funcionario3.cabello);
        System.out.println("Su tipo de cuerpo es: " + funcionario3.tipoCuerpo);
        System.out.println("");
        System.out.println("Metodos");
        System.out.println("Su alimentacion esta basada en: " + funcionario3.dieta);
        System.out.println("Su tiempo de descanso esta dado en: " + funcionario3.sueño);
        System.out.println("");
        System.out.println("Eventos");
        System.out.println("Su ambiente laboras se puede situar como: " + funcionario3.ambienteLaboral);
        System.out.println("Sus actividades según si cargo son: " + funcionario3.actividades);
        
        funcionario4.cargo = "Secretaria";
        funcionario4.cabello = "Negro";
        funcionario4.tipoCuerpo = "Ectomorfo";
        funcionario4.dieta = "Tres comidad al dia (mañana, tarde, noche)";
        funcionario4.sueño = "6 u 8 horas al dia";
        funcionario4.ambienteLaboral = "Un ambiente laboral con mayor interaccion con estudiantes, padres de familia y nuegos ingresados";
        funcionario4.actividades = "Atencion a estudfiantes y docentes, adicion de los creditos, modificaciones y novedades academicas";
        
        System.out.println("Funcionario 4");
        System.out.println("");
        System.out.println("Aributos");
        System.out.println("El cargo es: " + funcionario4.cargo);
        System.out.println("Su color de cabello es: " + funcionario4.cabello);
        System.out.println("Su tipo de cuerpo es: " + funcionario4.tipoCuerpo);
        System.out.println("");
        System.out.println("Metodos");
        System.out.println("Su alimentacion esta basada en: " + funcionario4.dieta);
        System.out.println("Su tiempo de descanso esta dado en: " + funcionario4.sueño);
        System.out.println("");
        System.out.println("Eventos");
        System.out.println("Su ambiente laboras se puede situar como: " + funcionario4.ambienteLaboral);
        System.out.println("Sus actividades según si cargo son: " + funcionario4.actividades);
    }
